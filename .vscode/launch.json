    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Palworld Settings",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/palworld_settings/palworld_settings.py",
            "args": [
                "--workpath=.",
                "--default-palworld-settings-ini=sample/DefaultPalWorldSettings.ini",
                "--default-palworld-settings-json=sample/DefaultPalWorldSettings.json",
                "--palworld-settings-ini=sample/Pal/Saved/Config/LinuxServer/PalWorldSettings.ini",
                "--description-json=description.json",
                "--description-lang=ko",
                "--write-json-file-always=true"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/scripts/palworld_settings"
        }
    ]
}